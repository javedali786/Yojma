<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:statusBarColor">@color/toolbar_bg_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/slide_bottom
        </item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimaryDark">@color/toolbar_bg_color</item>

    </style>


    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:calendarTextColor">@color/try_again_btn_txt_color</item>
        <item name="android:dayOfWeekBackground">@color/series_detail_now_playing_title_color</item>
        <item name="android:yearListSelectorColor">@color/try_again_btn_txt_color</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:minDate">01/01/2016</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/sfuitext_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="TextInputLayout.HintText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/try_again_btn_txt_color</item>
    </style>


    <style name="buttonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sign_up_text_size16sp</item>
        <item name="android:fontFamily">@font/sfuitext_bold</item>
        <item name="android:background">@drawable/signup_btn_gredient</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="buttonStyle_two" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sign_up_text_size16sp</item>
        <item name="android:fontFamily">@font/sfuitext_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sign_up_et_text_size</item>
        <item name="android:fontFamily">@font/sfuitext_medium</item>
        <item name="android:background">@drawable/signup_input_gradient</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textColorHint">@color/unselected_indicator_color</item>
    </style>

    <style name="TextView_Medium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sfuitext_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextView_Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sfuitext_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextInputLayout">
        <item name="colorControlActivated">@color/bottom_nav_color</item>
        <item name="colorControlNormal">@color/bottom_nav_color</item>
        <item name="colorControlHighlight">@color/bottom_nav_color</item>
    </style>
    <style name="Custom.Widget.CardView.background" parent="CardView">
        <item name="cardBackgroundColor">@color/transparent</item>
    </style>

    <style name="Custom.Widget.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/app_bg_color</item>
        <item name="android:background">@color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_8dp</item>
        <item name="cardUseCompatPadding">true</item>

    </style>

    <style name="Custom.Widget.CardView1" parent="CardView">
        <item name="cardBackgroundColor">@color/app_bg_color</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/card_corner_4dp</item>
        <item name="cardUseCompatPadding">true</item>

    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="tabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/tab_title_size</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#FFFFFF</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
</resources>