<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:id="@+id/mainLay"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/ll_trialBtn"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtrialbtn"
           >

            <TextView
                android:id="@+id/trialBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/moe_white"
                tools:text="7 Days Free Trail" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/mainLay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_inapp"
            android:clickable="true">


            <TextView
                android:id="@+id/plan_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/signUp_8dp_margin"
                android:layout_marginTop="@dimen/_10sdp"
                android:ellipsize="end"
                android:fontFamily="@font/sfuitext_bold"
                android:text=""
                android:textColor="@color/series_detail_now_playing_title_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plan_name_text"
                android:layout_marginStart="@dimen/signUp_8dp_margin"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@+id/plan_amount_text"
                android:ellipsize="end"
                android:fontFamily="@font/sfuitext_regular"
                android:text=""
                android:textColor="@color/series_detail_now_playing_title_color"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/plan_amount_text"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/sfuitext_regular"
                android:gravity="center"
                android:text=""
                android:textColor="@color/series_detail_now_playing_title_color"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>