<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_trialBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:background="@drawable/roundedtrialbtn"
        app:layout_constraintBottom_toTopOf="@+id/main_lay"
        app:layout_constraintStart_toStartOf="@+id/main_lay"
        app:layout_constraintTop_toTopOf="@+id/main_lay">

        <TextView
            android:id="@+id/trialBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textColor="@color/moe_white"
            app:layout_constraintBottom_toTopOf="@+id/main_lay"
            app:layout_constraintStart_toStartOf="@+id/main_lay"
            app:layout_constraintTop_toTopOf="@+id/main_lay"
            tools:text="7 Days Free Trail" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_lay"
        android:layout_width="168dp"
        android:layout_height="85dp"
        android:layout_margin="20dp"
        android:background="@drawable/border_plan"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/plan_name_text"
            style="@style/TextView_Medium"
            android:layout_gravity="center"
            android:fontFamily="@font/sfuitext_medium"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/buy_now_pay_now_btn_text_color" />

        <TextView
            android:id="@+id/plan_amount_text"
            style="@style/TextView_Medium"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sfuitext_bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/buy_now_pay_now_btn_text_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
